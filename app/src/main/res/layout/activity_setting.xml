<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.roy.mobilesafe.SettingActivity">
    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>
    <com.roy.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.roy.mobilesafe"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="自动更新设置"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"
        >
    </com.roy.view.SettingItemView>

</LinearLayout>
